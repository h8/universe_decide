{
  "setupFiles": [
    "<rootDir>/assets/js/tests/setup.js"
  ],

  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "transformIgnorePatterns": ["node_modules/"],

  "collectCoverage": true,
  "collectCoverageFrom" : [
    "assets/js/**/*.js",
    "!assets/js/tests/**/*.js"
  ],
  "coverageDirectory": "<rootDir>/_build/coverage/js",
  "coverageReporters": ["text-summary", "html"]
}